pipeline {
    agent any

    tools {
        maven 'Maven 3.9.6'       // ✅ Make sure this matches your Jenkins tool name
        jdk 'JDK 11'              // ✅ Or whatever JDK you've configured in Jenkins
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/swapnilrkGit/seleniumjava.git'
            }
        }

        stage('Build Project') {
            steps {
                bat 'mvn clean compile'
            }
        }

        stage('Run Tests') {
            steps {
                bat 'mvn test'
            }
        }
    }

    post {
        always {
            // Publish TestNG results
            junit 'test-output/testng-results.xml'
        }
    }
}
